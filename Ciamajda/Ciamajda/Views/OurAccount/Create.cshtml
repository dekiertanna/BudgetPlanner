@model Ciamajda.Account;

<h2>Dodaj konto</h2>
<div align="center">
    @using (Html.BeginForm("create", "OurAccount", FormMethod.Post))
    {
        <table class="table">


            <tr>
                <td> @Html.LabelFor(model => model.Name) </td>
                <td>@Html.TextBoxFor(model => model.Name) </td>
                <td>@Html.ValidationMessageFor(model => model.Name, "", new { @style = "color:red" }) </td>
            </tr>
            <tr>
                <td> @Html.LabelFor(model => model.Type) </td>
                <td>@Html.TextBoxFor(model => model.Type) </td>
                <td>@Html.ValidationMessageFor(model => model.Type, "", new { @style = "color:red" }) </td>
            </tr>
            <tr>
                <td> @Html.LabelFor(model => model.Number) </td>
                <td>@Html.TextBoxFor(model => model.Number) </td>
                <td>@Html.ValidationMessageFor(model => model.Number, "", new { @style = "color:red" }) </td>
            </tr>
                    @Html.EditorFor(model => model.CreationDate)
                    @Html.EditorFor(model => model.DiscardDate)
                    @Html.EditorFor(model => model.UserId)


            <tr>
                <td><input type="submit" value="Save" class="btn btn-default" /></td>
                <td></td>
                <td></td>
            </tr>
        </table>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



