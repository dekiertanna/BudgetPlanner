@using Microsoft.AspNetCore.Identity
@using Ciamajda.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div>
        <!-- Przy dodawaniu kolejnych stron patrzcie na przykład w _ManageNav.cshtml -->
        <ul id="menu" class=" nav nav-pills nav-stacked">
            <li class=""><a asp-action="">Saldo</a></li>
            <li>
                <a>Konta</a>
                <ul class="active">
                    @for (int i = 0; i < 10; i++)
                    {
                        <li class=""><a asp-action="">Konto @i</a></li>
                    }
                </ul>
            </li>
            <li class=""><a asp-action="">Środki</a></li>
            <li class=""><a asp-action="">Wydatki</a></li>
            <li class=""><a asp-action="">Analizy</a></li>
            <li class=""><a asp-action="">Kalkulator</a></li>
        </ul>
    </div>
}
else
{
    <div class="col-lg-0 col-md-0 col-sm-0"></div>

}

<script>


    $(document).ready(function () {
        $("#menu > li").click(function () {
            $(this).find("ul").slideToggle("slow");
        });
    });
</script>