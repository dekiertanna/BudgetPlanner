@using Microsoft.AspNetCore.Identity
@using Ciamajda.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li><a class="page-scroll" asp-controller="OurAccount" asp-action="Index">Konta</a></li>

    <li><a asp-area="" asp-controller="Summary" asp-action="Index" title="Podsumowanie">Portfel</a></li>
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Profil</a>
    </li>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <button type="submit" id="logout-button">Wyloguj</button>
    </form>
}
else
{
    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="page-scroll">Strona główna</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Register">Zarejestruj</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
}
