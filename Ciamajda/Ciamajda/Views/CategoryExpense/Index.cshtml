@model Ciamajda.Models.ViewModels.CategoryExpenseViewModel
    
<div>
    <h4 style="text-align: center">
        Kategorie wydatków
        <a asp-action="Create" title="Dodaj kategorie wydatków" style="float: right" class="fa fa-plus"></a>
    </h4>
    <hr />
</div>
<div class="table-responsive cart_info">

    <table class="table table-condensed">
        <thead>
            <tr>
                <td>Nazwa</td>
                <td>Opis</td>
                <td></td>
                <td>Akcje</td>

            </tr>
        </thead>
        <tbody>
            @if (ViewBag.CategoryExpenselist != null)
            {
                @foreach (var category in ViewBag.CategoryExpenselist)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td></td>
                        <td><a href="@Url.Action("Edit", "CategoryExpense", new { id = @category.Id })" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="@Url.Action("Delete", "CategoryExpense", new { id = @category.Id })" class="btn btn-primary "><i class="fa fa-times"></i></a></td>

                    </tr>

                }
            }

        </tbody>
    </table>
</div>
